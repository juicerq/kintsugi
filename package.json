{
  "name": "jask",
  "private": true,
  "version": "0.1.0",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:desktop": "bun run --cwd apps/desktop tauri dev",
    "dev:server": "bun run --cwd apps/server dev",
    "build": "bun run build:server && bun run --cwd apps/desktop tauri build",
    "build:server": "bun run --cwd apps/server build"
  }
}
